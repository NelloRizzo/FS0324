@using System.Security.Claims
@{
    ViewData["Title"] = "Home Page";

    var currentUser = (User.Identity?.IsAuthenticated ?? false) ? User.Identity.Name : "Anonimo";
    var friendlyName = User.Claims.FirstOrDefault(c => c.Type == "FriendlyName")?.Value ?? currentUser;
}

<div class="text-center">
    <h1 class="display-4">Welcome @friendlyName</h1>
    <ul>
    @foreach(var c in User.Claims.Where(cl => cl.Type == ClaimTypes.Role)) {
        <li>@c.Value</li>
    }
    </ul>
</div>
