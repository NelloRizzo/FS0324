@{
    ViewData["Title"] = "Home Admin";
}
<div class="text-center">
    <h1 class="display-4">Amministrazione</h1>
</div>

<div class="col d-flex flex-row p-2">
    <div class="card m-2">
        <div class="card-header text-center bg-opacity-50">
            <a asp-action="Index" asp-controller="Products" class="link-info">Gestione Prodotti</a>
        </div>
        <div class="card-body text-muted">
            Gestione dei prodotti in vendita.
        </div>
    </div>
    <div class="card m-2">
        <div class="card-header text-center bg-opacity-50">
            <a asp-action="Index" asp-controller="Images" class="link-info">Galleria</a>
        </div>
        <div class="card-body text-muted">
            Gestione della libreria delle immagini.
        </div>
    </div>
</div>
