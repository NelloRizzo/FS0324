@using BuildWeek1.BusinessLayer.Dto
@model ProductDto

@{
    ViewData["Title"] = "Conferma Eliminazione";
}

<h1>@ViewData["Title"]</h1>

<h3>Confermi di voler eliminare il prodotto seguente?</h3>
<div>
    <h4>Prodotto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => string.Join("", model.Description.Take(120)))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>

    <form asp-action="MvcDelete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Elimina</button>
        <a asp-action="Index" class="btn btn-secondary">Indietro</a>
    </form>
</div>
