@using W9.D2.EFCRUD.DataLayer.Entities
@model IEnumerable<Article>

<h1>Articoli di @(Model.FirstOrDefault()?.Author.FriendlyName ?? "Sconosciuto")</h1>

@if (Model.Any()) {
    <ul>
        @foreach (var article in Model) {
            <li>@article.Title</li>
        }
    </ul>
}
else {
    <div class="alert alert-warning">Nessun dato</div>
}