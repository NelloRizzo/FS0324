@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome @(TempData["User"] ?? "Nessun Login")</h1>
</div>

@if (TempData["Roles"] != null) {
    var roles = TempData["Roles"] as string[];

    <ul>
        @foreach(var role in roles) {
            <li>@role</li>
        }
    </ul>
}